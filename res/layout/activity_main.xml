<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="me.solidev.getwordtextview.MainActivity" >

    <me.solidev.library.GetWordTextView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/english_get_word_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        app:highlightColor="@color/colorAccent"
        app:highlightText="that"
        app:language="English"
        app:selectedColor="@color/colorPrimary" />

    <me.solidev.library.GetWordTextView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/chinese_get_word_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        app:highlightColor="@color/colorAccent"
        app:highlightText="中文"
        app:language="Chinese"
        app:selectedColor="@color/colorPrimary" />

    <Button
        android:id="@+id/btn_dismiss_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="取消选中效果" />
    
<me.solidev.library.ColorFontTextView
     xmlns:app="http://schemas.android.com/apk/res-auto"
       android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="人生若只如初见，何事秋风悲画扇。"
        android:textColor="#252c3d"
        android:textSize="12sp"
        app:style_arrays="bold|italic|bold_italic"
        app:text_arrays="人|何事|画" />
<me.solidev.library.ColorFontTextView
     xmlns:app="http://schemas.android.com/apk/res-auto"
       android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="人生若只如初见，何事秋风悲画扇。"
        android:textColor="#252c3d"
        android:textSize="12sp"
        app:color_arrays="#fa5645|#3bb64d|#bd0a0a"
        app:line_arrays="undeline|null|deleteline"
        app:style_arrays="bold|italic|bold_italic"
        app:text_arrays="人|何事|画"
        app:textsize_arrays="20|35|null"/>
<me.solidev.library.ColorFontTextView
     xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#252c3d"
        android:textSize="10sp"  />

 <me.solidev.library.TextDrawable
       xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       
        android:clickable="true"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:padding="20dp"
        android:text="设置"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        app:leftDrawable="@drawable/search_icon"
        app:leftDrawableHeight="30dp"
        app:leftDrawableWidth="30dp"
        app:rightDrawable="@drawable/search_icon"
        app:rightDrawableHeight="30dp"
        app:rightDrawableWidth="30dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorAccent"
        />
<me.solidev.library.TextDrawable
    xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/abc_list_divider_holo_dark"
        android:clickable="true"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:padding="20dp"
        android:text="消息"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        app:leftDrawable="@drawable/abc_ic_menu_moreoverflow_normal_holo_dark"
        app:leftDrawableHeight="60dp"
        app:leftDrawableWidth="60dp"
        />

 <me.solidev.library.TextDrawable
     xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/abc_ic_menu_moreoverflow_normal_holo_dark"
            android:clickable="true"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:padding="20dp"
            android:text="首页"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            app:topDrawable="@drawable/abc_textfield_search_default_holo_light"
            app:topDrawableHeight="60dp"
            app:topDrawableWidth="60dp"
            />
 <me.solidev.library.TextDrawable
     xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/abc_textfield_search_default_holo_light"
        android:clickable="true"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:padding="15dp"
        android:text="退出"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        app:rightDrawable="@drawable/abc_textfield_searchview_right_holo_dark"
        app:rightDrawableHeight="80dp"
        app:rightDrawableWidth="80dp"
        />
</LinearLayout>